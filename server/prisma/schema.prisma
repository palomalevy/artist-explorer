generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int @id @default(autoincrement())
  email         String @unique
  name          String
  username      String @unique
  passwordHash  String
  zipcode       Int
  imageURL      String?
  genres        Genre[] @default([POP, CLASSICAL, LATIN])
  posts         Post[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Genre {
  POP
  CLASSICAL
  LATIN
}

model Post {
  id           Int @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  title        String
  author       User @relation(fields: [authorId], references: [id])
  authorId     Int
  zipcode      Int
  postImages   String?
  musicURL     String?
  genre        Genre
}